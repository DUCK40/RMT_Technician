<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirm_Repair">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        tools:context=".Maps_Repair_Activity" />


    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_below="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="แจ้งซ่อม"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp"
                android:textStyle="bold" />

            ///Topics1

            <LinearLayout
                android:id="@+id/LRating1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="30dp"

                    android:text="ชื่อ" />


                <TextView
                    android:id="@+id/txtname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:textSize="30dp"

                    android:text="sssss" />
            </LinearLayout>


            ///TextTopicsHEAD2

            <LinearLayout
                android:id="@+id/LText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LRating1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="30dp"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="เบอร์" />

                <TextView
                    android:id="@+id/txttel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:text="" />


            </LinearLayout>
            ///Topics2

            <LinearLayout
                android:id="@+id/LRating2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LText2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="30dp"

                    android:text="จุดสังเกต" />

                <TextView
                    android:id="@+id/txtmark1"
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="38dp"
                    android:textSize="30dp"

                    android:gravity="top"

                    />
            </LinearLayout>

            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#E6E6FA"
                android:outlineSpotShadowColor="@color/colorPrimary"

                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="รายละเอียดการซ่อม"
                        android:textSize="25dp"

                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rubberfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tr"

                        android:layout_alignParentStart="true"
                        android:layout_marginTop="7dp"
                        android:text="ล้อหน้า :" />



                    <TextView
                        android:id="@+id/namerubberfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tr"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="7dp"
                        android:text="ล้อหน้า" />

                    <TextView
                    android:id="@+id/baht"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tr"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="7dp"
                    android:text="บาท" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/baht"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="7dp"
                        android:text="บาท" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rubberfont"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="7dp"

                        android:text="ล้อหลัง :" />

                    <TextView
                        android:id="@+id/namerubberback"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rubberfont"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="7dp"
                        android:text="ล้อหน้า" />

                </RelativeLayout>


            </FrameLayout>

            ///TextTopicsHEAD3

            <LinearLayout
                android:id="@+id/LText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LRating2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"

                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="finish" />

                <Button
                    android:id="@+id/button2"

                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Cancel" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>